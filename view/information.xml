<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="information_form_view" model="ir.ui.view">
        <field name="name">information</field>
        <field name="model">workers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="hr.group_hr_user"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div id="o_employee_container"><div id="o_employee_main">
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="პერსონალის სახელი" required="True" string="სახელი"/>
                            </h1>
                        </div>
                        <field name="personality" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="პირადი უნარჩვევები" groups="hr.group_hr_user"/>
                        <notebook>
                            <page name="public" string="ინფორმაცია და დეპარტამენტი">
                                <group>
                                    <group string="საკონტაქტო ინფორმაცია">
                                        <field name="address_id"
                                               context="{'show_address': 1}"
                                               options='{"always_reload": True, "highlight_first_line": True}'/>
                                        <field name="work_location" string="სამუშაო ადგილი"/>
                                        <field name="work_email" widget="email" string="სამუშაო ფოსტა"/>
                                        <field name="mobile_phone" string="მობილური ნომერი"/>
                                        <field name="work_phone" string="სახლის ნომერი"/>
                                    </group>
                                    <group string="პოზიცია">
                                        <field name="depatments" string="დეპარტამენტი ადგილი"/>
                                        <field name="job_id" string="ჯობ იდი"/>
                                        <field name="parent_id" string="კავშირი ასევე"/>
                                        <field name="coach_id" string="კავშირი"/>
                                        <field name="resource_calendar_id" string="სამუშაო საათები"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="მოგვიყევით თქვენს შესახებ..." colspan="4"/>
                            </page>
                            <page name="personal_information" string="პირადი ინფორმაცია" groups="hr.group_hr_user">
                                <group>
                                    <group string="მოქალაქეობა და სხვ.">
                                        <field name="country_id" options='{"no_open": True, "no_create": True}' string="ქვეყანა"/>
                                        <field name="identification_id" groups="hr.group_hr_user" string="პირადი ნომერი"/>
                                        <field name="passport_id" groups="hr.group_hr_user" string="პასპორტის ნომერი"/>
                                        <field name="bank_account_id" context="{'default_partner_id': address_home_id}" string="საბანკო ანგარიში"/>
                                    </group>
                                    <group string="სახლის მისამართი">
                                        <field name="address_home_id"
                                               context="{'show_address': 1}"
                                               options='{"always_reload": True, "highlight_first_line": True}' string="სახლის მისამართი"/>
                                        <field name="is_address_home_a_company" invisible="1"/>
                                        <div class="text-warning" groups="hr.group_hr_user"
                                             attrs="{'invisible': [('is_address_home_a_company','=', False)]}">
                                        </div>
                                    </group>
                                    <group string="სქესი და ოჯახური მდგომარეობა">
                                        <field name="gender" string="სქესი"/>
                                        <field name="marital" string="ოჯახური მდგომარეობა"/>
                                    </group>
                                    <group string="დაბადების თარიღI">
                                        <field name="birthday" string="დაბადების თარიღი"/>
                                    </group>
                                    <group string="სამუშაო ვიზა" name="work_permit">
                                        <field name="visa_no" string="სამუშაო ვიზა"/>
                                        <field name="permit_no" string="სამუშაო ვიზის ნომერი"/>
                                        <field name="visa_expire" string="სამუშაო ვიზის ვადა"/>
                                    </group>
                                </group>
                            </page>
                            <page name="hr_settings" string="კავშირი" groups="hr.group_hr_user">
                                <group>
                                    <group string='კავშირი' name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="user_id" string="Related User"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </div></div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="information_kanban_view" model="ir.ui.view">
        <field name="name">information</field>
        <field name="model">workers</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_employee_kanban">
                <field name="id"/>
                <field name="message_is_follower"/>
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
                <field name="message_needaction_counter"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.employee', 'image_medium', record.id.raw_value)"/>
                                <div class="o_employee_summary_icons">
                                    <t t-if="record.message_needaction_counter.raw_value">
                                        <span class='oe_kanban_mail_new' title='Unread Messages'><i class='fa fa-comments'/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                    </t>
                                    <span title='Messages'><i class='fa fa-comments'/><t t-esc="record.message_ids.raw_value.length"/></span>
                                    <span title='Followers'><i class='fa fa-users'/><t t-esc="record.message_follower_ids.raw_value.length"/></span>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle"><field name="job_id"/></span>
                                    </div>
                                </div>
                                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <ul>
                                    <li id="last_login"/>
                                    <li t-if="record.work_location.raw_value"><field name="work_location"/></li>
                                    <li t-if="record.work_email.raw_value"><i class="fa fa-envelope"></i> <field name="work_email"/></li>
                                    <li t-if="record.work_phone.raw_value"><i class="fa fa-phone"></i> <field name="work_phone"/></li>
                                    <li t-if="record.mobile_phone.raw_value"><i class="fa fa-mobile"></i> <field name="mobile_phone"/></li>
                                </ul>
                                <div class="o_kanban_button">
                                    <button t-if="record.message_is_follower.raw_value" name="action_unfollow" type="object" class="o_follow_btn o_following btn btn-sm btn-default">
                                        <span class="o_unfollow">Unfollow</span>
                                        <span class="o_following">Following</span>
                                    </button>
                                    <button t-if="!record.message_is_follower.raw_value" name="action_follow" type="object" class="o_follow_btn o_follow btn btn-sm btn-primary">Follow</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="workers_tree_view" model="ir.ui.view">
        <field name="name">workers tree</field>
        <field name="model">workers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="departamentis_view_xe" model="ir.ui.view">
        <field name="name">Departametni</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <tree>
                        <group>
                            <field name="employe"/>
                            <field name="parent_department"/>
                        </group>
                    </tree>
                </sheet>
            </form>
        </field>
    </record>

    <record id="departamentiS_kanbanis_xe" model="ir.ui.view">
        <field name="name">Departamentis</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="employe"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="oe_kanban_tags_section">
                                    <ul>
                                        <li>სახელი: <field name="employe"/></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="departments_tree_view" model="ir.ui.view">
        <field name="name">departments tree</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="compute_name"/>
            </tree>
        </field>
    </record>

    <record id="personality_kanbanis_xe" model="ir.ui.view">
        <field name="name">personality kanban</field>
        <field name="model">persnality</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="personality_of_employ"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="oe_kanban_tags_section">
                                    <ul>
                                        <li>სახელი: <field name="personality_of_employ"/></li>                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="personality_tree_view" model="ir.ui.view">
        <field name="name">personality tree</field>
        <field name="model">persnality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="personality_of_employ"/>
            </tree>
        </field>
    </record>

    <record id="information_account_view" model="ir.actions.act_window">
        <field name="name">Information</field>
        <field name="res_model">workers</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <record id="department_accoutn_view" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">department</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

        <record id="personality_account_view" model="ir.actions.act_window">
        <field name="name">personality</field>
        <field name="res_model">persnality</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
            name="Database"
            id="database_menu_id"/>
    <menuitem
            name="Workers"
            parent="database_menu_id"
            action="information_account_view"
            id="workers_menu_id"/>
    <menuitem
            name="Department"
            parent="database_menu_id"
            action="department_accoutn_view"
            id="department_menu_id"/>
    <menuitem
            name="Personality"
            parent="database_menu_id"
            action="personality_account_view"
            id="personality_menu_id"/>
</odoo>